{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && dotnet build -c Release",
    "watchPatterns": []
  },
  "deploy": {
    "startCommand": "cd backend && dotnet run --no-build",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

